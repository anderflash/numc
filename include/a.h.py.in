@ANAME@*
@ANAME@_negative(@ANAME@ *a);

@ANAME@*
@ANAME@_reciprocal(@ANAME@ *a);

@ANAME@*
@ANAME@_mod(@ANAME@ *a);

uint32_t
@ANAME@_dot(@ANAME@* a, @ANAME@* b);

void
@ANAME@_destroy(@ANAME@ *a);

#endif
