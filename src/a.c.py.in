nelem_t
@ANAME@_get_offset(@ANAME@ *a, nelem_t *pos) {
  return get_offset(a->h.dim, a->h.step, pos);
}

@ATYPE@
@ANAME@_get_elem(@ANAME@ *a, nelem_t* pos) {
  return a->d[@ANAME@_get_offset(a, pos)];
}

@ANAME@*
@ANAME@_get(@ANAME@* a, uint8_t nranges, nelem_t* ranges) {
  // Get array with same dimension as a
  @ANAME@* b = @ANAME@_new_dim(a->h.dim);
  nelem_t start = 0; // index of initial element
  nelem_t n = 1;
  uint8_t i, i2; // iterators for range (i and 2*i)
  // Same original step
  memcpy(b->h.ostep, a->h.ostep, a->h.dim * sizeof(nelem_t));
  // Same data
  b->d = a->d;

  // Calculate start
  for(i = 0; i < nranges ; i++) {
    i2 = i << 1;
    start += ranges[i2] * a->h.step[i];
    // Calculate new shape
    b->h.shape[i] = MIN(ranges[i2+1], a->h.shape[i]) - ranges[i2];
    // Number of elements
    n *= b->h.shape[i];
  }
  for(; i < b->h.dim; i++) {
    b->h.shape[i] = a->h.shape[i];
    n *= b->h.shape[i];
  }
  b->h.start = start;
  b->h.n = n;

  // Step size
  step_from_shape(b->h.dim, b->h.step, b->h.shape);
  return b;
}

@ATYPE@
@ANAME@_get_elem_offset(@ANAME@* a, nelem_t i) {
  // Convert 1D into ND pos based on slice step
  nelem_t* pos = malloc(sizeof(nelem_t) * a->h.dim);
  uint8_t k;
  for(k = 0; k < a->h.dim; k++) {
    pos[k] = i / a->h.step[k];
    i %= a->h.step[k];
  }
  i = a->h.start;

  // Convert ND into 1D based on original step
  for(k = 0; k < a->h.dim; k++) {
    i += pos[k] * a->h.ostep[k];
  }
  return a->d[i];
}

void
@ANAME@_set(@ANAME@* a, @ATYPE@* d) {
  memcpy(a->d,d,sizeof(uint8_t) * a->h.n);
}

void
@ANAME@_set_elem(@ANAME@* a, nelem_t *pos, @ATYPE@ value) {
  nelem_t offset = 0;
  uint8_t i;
  for(i = 0; i < a->h.dim; i++) offset += pos[i] * a->h.step[i];
  a->d[offset] = value;
}

uint32_t
@ANAME@_dot(@ANAME@* a, @ANAME@* b) {
  uint64_t i;
  uint32_t c = 0;

  for(i = 0; i < a->h.n; i++) c += a->d[i] * b->d[i];
  return c;
}

@ANAME@*
@ANAME@_zeros(uint8_t dim, nelem_t* shape) {
  @ANAME@* a = @ANAME@_new_shape(dim, shape);
  memset(a->d, 0, sizeof(uint8_t) * a->h.n);
  return a;
}

@ANAME@*
@ANAME@_zeros_like(@ANAME@* a) {
  return @ANAME@_zeros(a->h.dim, a->h.shape);
}

@ANAME@*
@ANAME@_ones(uint8_t dim, nelem_t* shape) {
  uint64_t i;
  @ANAME@* a = @ANAME@_new_shape(dim, shape);
  for(i = 0; i < a->h.n; i++){
    a->d[i] = 1;
  }
  return a;
}

@ANAME@*
@ANAME@_ones_like(@ANAME@* a) {
  return @ANAME@_ones(a->h.dim, a->h.shape);
}

@ANAME@*
@ANAME@_eye(nelem_t rows) {
  return @ANAME@_eye_cols(rows, rows);
}

@ANAME@*
@ANAME@_eye_cols(nelem_t rows, nelem_t cols) {
  nelem_t shape[] = {rows, cols};
  @ANAME@* a = @ANAME@_zeros(2, shape);
  nelem_t step = a->h.step[0] + a->h.step[1];
  uint8_t i;
  for(i = 0; i < a->h.n; i += step) {
    a->d[i] = 1;
  }
  return a;
}

@ANAME@*
@ANAME@_filled(uint8_t dim, nelem_t* shape, @ATYPE@ value) {
  @ANAME@* a = @ANAME@_new_shape(dim, shape);
  memset(a->d, value, a->h.n * sizeof(dim));
  return a;
}

@ANAME@*
@ANAME@_filled_like(@ANAME@* a, @ATYPE@ value) {
  return @ANAME@_filled(a->h.dim, a->h.shape, value);
}

@ANAME@*
@ANAME@_copy(@ANAME@* a) {
  @ANAME@* b = @ANAME@_new_like(a);
  @ANAME@_set(b, a->d);
  return b;
}

void
@ANAME@_save_gzip(char* filename, uint8_t narrays, char** names, @ANAME@** arrays) {

  ncz* fp = ncz_open(filename, "wb", TRUE);
  uint8_t i,len;

  // write number of arrays
  ncz_write(fp,&narrays,sizeof(uint8_t),1);

  // write names
  for(i = 0; i < narrays; i++){
    len = strlen(names[i]);
    ncz_write(fp,&len,sizeof(uint8_t),1);
    ncz_write(fp,names[i],sizeof(char),len);
  }

  // write proper arrays
  for(i = 0; i < narrays; i++){
    // write n, start, dim, owns_data and elemsize
    ncz_write(fp,&arrays[i]->h.n, (sizeof(nelem_t) << 1) + (sizeof(uint8_t) << 1) + sizeof(uint8_t), 1);

    // write shape and step
    ncz_write(fp,arrays[i]->h.shape, sizeof(nelem_t), arrays[i]->h.dim);
    ncz_write(fp,arrays[i]->h.step, sizeof(nelem_t), arrays[i]->h.dim);

    // write data
    ncz_write(fp,arrays[i]->d, arrays[i]->h.bitsize, arrays[i]->h.n);
  }

  // close the file
  ncz_close(fp);
}

@ANAME@*
@ANAME@_load_gzip(char* filename, uint8_t* narraysp, char*** namesp) {
  char            ** names;
  @ANAME@              * ar;
  ncz              * fp;
  uint8_t            i;
  uint8_t            len;
  uint8_t            num;

  // open the file
  fp = ncz_open(filename, "rb", TRUE);

  // read number of arrays
  ncz_read(fp, narraysp, sizeof(uint8_t), 1);
  num = *narraysp;

  // read names
  *namesp =(char**) malloc(num*sizeof(char*));
  names = *namesp;
  for(i = 0; i < num; i++){
    // Read length of each name
    ncz_read(fp,&len,sizeof(uint8_t),1);
    names[i] = (char*)malloc(sizeof(char)*(len+1));
    ncz_read(fp,names[i],sizeof(char),len);
    names[i][len] = '\0';
  }

  // read proper arrays
  ar = malloc(sizeof(@ANAME@)*num);
  for(i = 0; i < num; i++){
    // read nelem, dim, owns_data and elemsize
    ncz_read(fp, &ar[i].h.n, (sizeof(nelem_t) << 1) + (sizeof(uint8_t) << 1) + sizeof(uint8_t),1);

    // read shape and step
    ar[i].h.shape = malloc(sizeof(nelem_t)* ar[i].h.dim);
    ar[i].h.step  = malloc(sizeof(nelem_t)* ar[i].h.dim);
    ar[i].h.ostep  = malloc(sizeof(nelem_t)* ar[i].h.dim);
    ncz_read(fp,ar[i].h.shape,sizeof(nelem_t),ar[i].h.dim);
    ncz_read(fp,ar[i].h.step ,sizeof(nelem_t),ar[i].h.dim);
    memcpy(ar[i].h.ostep, ar[i].h.step, sizeof(nelem_t)*ar[i].h.dim);

    // read data
    ar[i].d = malloc(ar[i].h.bitsize * ar[i].h.n);
    ncz_read(fp, ar[i].d, ar[i].h.bitsize, ar[i].h.n);
  }

  // close the file
  ncz_close(fp);
  return ar;
}

@ANAME@*
@ANAME@_add(@ANAME@ *a, @ANAME@ *b) {
  @ANAME@* c = @ANAME@_new_like(a);
  nelem_t i;
  for(i = 0; i < c->h.n; i++)
    c->d[i] = @ANAME@_get_elem_offset(a, i) + @ANAME@_get_elem_offset(b, i);
  return c;
}

