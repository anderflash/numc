@ANAME@*
@ANAME@_new() {
  @ANAME@* a = calloc(1, sizeof(@ANAME@));
  a->h.bitsize = 1;
  return a;
}

@ANAME@*
@ANAME@_new_dim(uint8_t dim) {
  @ANAME@* a = @ANAME@_new();
  a->h.dim = dim;
  a->h.shape = malloc(sizeof(nelem_t) * (dim << 3));
  a->h.ostep = a->h.shape + dim;
  a->h.step = a->h.ostep + dim;
  return a;
}

static @ANAME@*
@ANAME@_new_shape_core(uint8_t dim, nelem_t* shape) {
  @ANAME@* a = @ANAME@_new_dim(dim);
  nelem_t n = 1;
  uint8_t i;
  memcpy(a->h.shape, shape, sizeof(nelem_t) * dim);
  a->h.step[dim-1] = 1;
  for(i = 0; i < dim; i++) n *= shape[i];
  for(i = dim-1; i > 0; i--) a->h.step[i-1] = a->h.step[i] * a->h.shape[i];
  memcpy(a->h.ostep, a->h.step, sizeof(nelem_t) * dim);
  a->h.n = n;
}

@ANAME@*
@ANAME@_new_shape(uint8_t dim, nelem_t* shape) {
  @ANAME@* a = @ANAME@_new_shape_core(dim, shape);
  a->d = malloc(sizeof(uint8_t) * a->h.n);
  a->h.owns = TRUE;
  return a;
}

@ANAME@*
@ANAME@_new_like(@ANAME@* a) {
  return @ANAME@_new_shape(a->h.dim, a->h.shape);
}

@ANAME@*
@ANAME@_new_data(uint8_t dim, nelem_t* shape, @ATYPE@* data) {
  @ANAME@* a = @ANAME@_new_shape_core(dim, shape);
  a->d = data;
  a->h.owns = FALSE;
  return a;
}

@ANAME@*
@ANAME@_new_1d(nelem_t x) {
